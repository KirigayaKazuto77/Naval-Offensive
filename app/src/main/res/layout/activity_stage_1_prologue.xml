<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stage1_Prologue_Activity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prologue_bg"
        android:background="@drawable/prologue_bg"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stage1_prologue_details"/>

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="90dp"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/play_button_togameplay"
        android:id="@+id/stage1_play_fromPrologue"/>

</RelativeLayout>