<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prologue_bg"
        android:background="@drawable/prologue_bg"
        android:scaleType="centerCrop" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:src="@drawable/pause_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/pause_button"/>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/practice_target_life_points_bg">

        <RelativeLayout
            android:layout_width="183dp"
            android:layout_height="17dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18.5dp">

            <ProgressBar
                android:layout_width="184dp"
                android:layout_height="17dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/lifebar_enemy"
                android:thumb="@drawable/lifebar_button"
                android:indeterminate="false"
                android:progress="100"
                android:id="@+id/target_life_points"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-2.5dp"
                android:textStyle="bold"
                android:id="@+id/currentAngleText"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.67 Km"
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="73dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:id="@+id/target_distance"/>

    </RelativeLayout>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/angle_fire"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:src="@drawable/fire_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:alpha="1"
            android:id="@+id/fire_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:visibility="gone"
            android:id="@+id/fire_reload_time"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:layout_marginRight="170dp"
        android:background="@drawable/lifebar_bg">

        <ProgressBar
            android:id="@+id/player_life_points"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="24dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/lifebar"
            android:thumb="@drawable/lifebar_button" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="230dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="110dp">

        <ImageView
            android:src="@drawable/gun_turret"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-120dp"
            android:layout_marginBottom="65dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/gun_turret">
        </ImageView>

        <ImageView
            android:src="@drawable/gun_cupola"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pause_menu_bg"
        android:visibility="gone"
        android:id="@+id/pause_menu">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@color/darkblue"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:src="@drawable/master_control_label"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/volume_label"/>

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/volume_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-20dp"
                android:progressDrawable="@drawable/seektrack"
                android:thumb="@drawable/thumbtrack"
                android:indeterminate="false"
                android:id="@+id/volume_seekbar"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@drawable/resume_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/volume_seekbar"
                android:id="@+id/resume_button"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:src="@drawable/mainmenu_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/resume_button"
                android:id="@+id/mainmenu_button"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@drawable/quit_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mainmenu_button"
                android:id="@+id/quit_button"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>