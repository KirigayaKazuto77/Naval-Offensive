<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prologue_bg"
        android:background="@drawable/prologue_bg"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="620dp"
        android:layout_height="300dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="120dp"
        android:id="@+id/player_ship">

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="85dp"
            android:id="@+id/gun_turret">
            <ImageView
                android:src="@drawable/gun_turret"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
            </ImageView>
            <ImageView
                android:id="@+id/gunfire_effect"
                android:src="@drawable/gunfire_fx_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="32dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <ImageView
            android:src="@drawable/ship_body"
            android:layout_width="700dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"/>

        <RelativeLayout
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="87dp"
            android:visibility="gone"
            android:id="@+id/secondary_gun_first">
            <ImageView
                android:src="@drawable/secondary_gun"
                android:layout_width="47dp"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/secondary_gunfire_effect"
                android:src="@drawable/gunfire_fx_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="97dp"
            android:visibility="gone"
            android:id="@+id/secondary_gun_second">
            <ImageView
                android:src="@drawable/secondary_gun"
                android:layout_width="47dp"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/secondary_gunfire_effect_second"
                android:src="@drawable/gunfire_fx_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <ImageView
            android:src="@drawable/missilelauncher1"
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_marginLeft="279dp"
            android:layout_marginTop="130dp"
            android:visibility="gone"
            android:id="@+id/missile_launcher_1"/>

        <ImageView
            android:src="@drawable/missilelauncher2"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="128dp"
            android:visibility="gone"
            android:id="@+id/missile_launcher_2"/>

        <ImageView
            android:src="@drawable/missilelauncher4"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="120dp"
            android:visibility="gone"
            android:id="@+id/missile_launcher_4"/>

        <ImageView
            android:src="@drawable/explosion_fx_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="120dp"
            android:visibility="gone"
            android:id="@+id/ship_player_fx"/>

    </RelativeLayout>

    <ImageView
        android:src="@drawable/harpoon_missile"
        android:layout_width="70dp"
        android:layout_height="290dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="130dp"
        android:visibility="gone"
        android:id="@+id/harpoon_missile"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp">
        <ImageView
            android:src="@drawable/enemy_ship_1"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/target_ship_1"/>
        <ImageView
            android:src="@drawable/enemy_ship_2"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/target_ship_2"/>
        <ImageView
            android:src="@drawable/explosion_fx_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/explosion_fx"/>
    </RelativeLayout>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:src="@drawable/pause_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/pause_button"/>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/practice_target_life_points_bg">

        <RelativeLayout
            android:layout_width="183dp"
            android:layout_height="17dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18.5dp">

            <ProgressBar
                android:layout_width="184dp"
                android:layout_height="17dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/lifebar_enemy"
                android:thumb="@drawable/lifebar_button"
                android:indeterminate="false"
                android:id="@+id/target_life_points"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-2.5dp"
                android:textStyle="bold"
                android:id="@+id/currentEnemyLifeText"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.67 Km"
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="73dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:id="@+id/target_distance"/>

    </RelativeLayout>

    <ImageView
        android:src="@drawable/angle_picker_bg"
        android:layout_width="93dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"/>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/angle_fire"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp">
        <ImageButton
            android:src="@drawable/fire_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:alpha="1"
            android:id="@+id/fire_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:visibility="gone"
            android:id="@+id/fire_reload_time"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="25dp">
        <ImageButton
            android:src="@drawable/missile_launch"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:alpha="1"
            android:id="@+id/missile_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:visibility="gone"
            android:id="@+id/missile_reload_time"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="255dp"
        android:background="@drawable/lifebar_bg">

        <ProgressBar
            android:id="@+id/player_life_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="176dp"
            android:layout_height="10dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="28dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/lifebar"
            android:thumb="@drawable/lifebar_button" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/remaining_missiles"/>

    </RelativeLayout>

    <ImageView
        android:src="@drawable/harpoon_missile_impact"
        android:layout_width="20dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150dp"
        android:layout_marginTop="-270dp"
        android:id="@+id/harpoon_missile_impact"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pause_menu_bg"
        android:visibility="gone"
        android:id="@+id/pause_menu">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@color/darkblue"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:src="@drawable/master_control_label"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/volume_label"/>

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/volume_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-25dp"
                android:progressDrawable="@drawable/seektrack"
                android:thumb="@drawable/thumbtrack"
                android:indeterminate="false"
                android:id="@+id/volume_seekbar"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@drawable/resume_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/volume_seekbar"
                android:id="@+id/resume_button"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/restart_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/resume_button"
                android:id="@+id/restart_button"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/mainmenu_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/restart_button"
                android:id="@+id/mainmenu_button"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@drawable/quit_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mainmenu_button"
                android:id="@+id/quit_button"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pause_menu_bg"
        android:visibility="gone"
        android:id="@+id/success_popup">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@color/darkblue"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/mission_complete_popup">

            <ImageView
                android:src="@drawable/mission_label"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/mission_label">
            </ImageView>

            <ImageView
                android:src="@drawable/complete_label"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mission_label"
                android:id="@+id/complete_label">
            </ImageView>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:src="@drawable/levels_button"
                android:layout_below="@+id/complete_label"
                android:layout_centerHorizontal="true"
                android:id="@+id/campaignList_button"/>

            <ImageButton
                android:onClick="toMainMenu"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:src="@drawable/mainmenu_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/campaignList_button"
                android:id="@+id/success_mainmenu_button"/>

            <ImageButton
                android:onClick="quitGame"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@drawable/quit_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/success_mainmenu_button"
                android:id="@+id/success_quit_button"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pause_menu_bg"
        android:visibility="gone"
        android:id="@+id/failed_popup">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@color/darkblue"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/mission_failed_popup">

            <ImageView
                android:src="@drawable/mission_label_red"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/mission_failed_label">
            </ImageView>

            <ImageView
                android:src="@drawable/failed_label"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="-10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mission_failed_label"
                android:id="@+id/failed_label">
            </ImageView>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@drawable/try_again_button"
                android:layout_below="@+id/failed_label"
                android:layout_centerHorizontal="true"
                android:id="@+id/tryAgain_button"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="-10dp"
                android:background="@null"
                android:src="@drawable/levels_button"
                android:layout_below="@+id/tryAgain_button"
                android:layout_centerHorizontal="true"
                android:id="@+id/failed_campaignList_button"/>

            <ImageButton
                android:onClick="toMainMenu"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:src="@drawable/mainmenu_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/failed_campaignList_button"
                android:id="@+id/failed_mainmenu_button"/>

            <ImageButton
                android:onClick="quitGame"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="-10dp"
                android:background="@null"
                android:src="@drawable/quit_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/failed_mainmenu_button"
                android:id="@+id/failed_quit_button"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>