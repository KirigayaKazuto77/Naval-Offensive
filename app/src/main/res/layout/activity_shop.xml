<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg_gif_wallpaper"
        android:background="@drawable/main_bg_gif_wallpaper"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:src="@drawable/back_button"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/shop_back_button"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:src="@drawable/cash_display"
            android:layout_width="250dp"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="0"
            android:gravity="right"
            android:textSize="25sp"
            android:id="@+id/money"/>

    </RelativeLayout>

    <ImageButton
        android:src="@drawable/shop_install_gun_otomelara_mk3"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/shop_install_gun_otomelara_mk3"/>

    <ImageButton
        android:src="@drawable/shop_install_gun_otomelara_mk1"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/shop_install_gun_otomelara_mk1"/>

    <ImageButton
        android:src="@drawable/shop_install_gun_otobreda"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/shop_install_gun_otobreda"/>

    <ImageButton
        android:src="@drawable/shop_buy_missile_quad"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/shop_buy_missile_quad"/>

    <ImageButton
        android:src="@drawable/shop_buy_missile_twin"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/shop_buy_missile_twin"/>

    <ImageButton
        android:src="@drawable/shop_buy_missile_single"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/shop_buy_missile_single"/>

    <ImageButton
        android:src="@drawable/shop_buy_autocannon_double"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:id="@+id/shop_buy_autocannon_double"/>

    <ImageButton
        android:src="@drawable/shop_buy_autocannon_single"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:id="@+id/shop_buy_autocannon_single"/>

</RelativeLayout>